@model DMOficialGestorDeTareasMVC.Models.DMTarea

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="my-4">Eliminar Tarea</h1>
    <h3>¿Estás seguro de que deseas eliminar esto?</h3>
    <div class="border p-4 rounded mx-auto">
        <h4 class="mb-3">Detalles de la Tarea</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DMTitulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DMTitulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DMDescripcion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DMDescripcion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DMFechaVencimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DMFechaVencimiento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DMPrioridad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DMPrioridad.DMNombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DMCategoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DMCategoria.DMNombre)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="DMTareaID" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
        </form>
    </div>
</div>