@model DMOficialGestorDeTareasMVC.Models.DMTarea

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <h1 class="my-4">Detalles de la Tarea</h1>
    <div class="border p-4 rounded mx-auto">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DMTitulo)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DMTitulo)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DMDescripcion)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DMDescripcion)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DMFechaVencimiento)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DMFechaVencimiento)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DMPrioridad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DMPrioridad.DMPrioridadID)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DMCategoria)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DMCategoria.DMNombre)
            </dd>
        </dl>
    </div>
    <div class="mt-4 mx-auto">
        <a asp-action="Edit" asp-route-id="@Model?.DMTareaID" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
    </div>
</div>