@model DMOficialGestorDeTareasMVC.Models.DMTarea

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Crear Tareas</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="DMTitulo" class="form-label"></label>
                        <input asp-for="DMTitulo" class="form-control" />
                        <span asp-validation-for="DMTitulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DMDescripcion" class="form-label"></label>
                        <input asp-for="DMDescripcion" class="form-control" />
                        <span asp-validation-for="DMDescripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DMFechaVencimiento" class="form-label"></label>
                        <input asp-for="DMFechaVencimiento" class="form-control" />
                        <span asp-validation-for="DMFechaVencimiento" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DMPrioridadID" class="form-label"></label>
                        <select asp-for="DMPrioridadID" class="form-control" asp-items="ViewBag.DMPrioridadId"></select>
                        <span asp-validation-for="DMPrioridadID" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DMCategoriaID" class="form-label"></label>
                        <select asp-for="DMCategoriaID" class="form-control" asp-items="ViewBag.DMCategoriaId"></select>
                        <span asp-validation-for="DMCategoriaID" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Regrasar a la Lista de Tareas</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
