@model DMOficialGestorDeTareasMVC.Models.DMCategoria

@{
    ViewData["Title"] = "Create";
}

<h1 class="display-4">Crear Categoria</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="DMNombre" class="form-label"></label>
                        <input asp-for="DMNombre" class="form-control" />
                        <span asp-validation-for="DMNombre" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DMDescripcion" class="form-label"></label>
                        <input asp-for="DMDescripcion" class="form-control" />
                        <span asp-validation-for="DMDescripcion" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a asp-action="Index" class="btn btn-secondary">Regresar a la lista de Categoría</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
